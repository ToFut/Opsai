# OpenAI API Key (required for website analysis)
OPENAI_API_KEY=sk-your-openai-api-key

# Application URLs
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database (for credential storage)
DATABASE_URL=postgresql://user:password@localhost:5432/opsai_onboarding

# Credential Encryption (generate with: openssl rand -hex 32)
CREDENTIAL_ENCRYPTION_KEY=your-32-character-hex-key

# OAuth Provider Credentials
# QuickBooks
QUICKBOOKS_CLIENT_ID=your-quickbooks-client-id
QUICKBOOKS_CLIENT_SECRET=your-quickbooks-client-secret

# Square
SQUARE_CLIENT_ID=your-square-client-id
SQUARE_CLIENT_SECRET=your-square-client-secret

# Stripe
STRIPE_CLIENT_ID=your-stripe-client-id
STRIPE_CLIENT_SECRET=your-stripe-client-secret

# Shopify
SHOPIFY_CLIENT_ID=your-shopify-client-id
SHOPIFY_CLIENT_SECRET=your-shopify-client-secret

# HubSpot
HUBSPOT_CLIENT_ID=your-hubspot-client-id
HUBSPOT_CLIENT_SECRET=your-hubspot-client-secret

# Salesforce
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret

# Xero
XERO_CLIENT_ID=your-xero-client-id
XERO_CLIENT_SECRET=your-xero-client-secret

# Google Workspace
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft 365
